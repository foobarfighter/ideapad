<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <title>Ideas!</title>

    <style type="text/css">
        @import "/stylesheets/dndDefault.css";
        @import "/javascripts/dojo/dojo/resources/dojo.css";
        @import "/javascripts/dojo/dijit/themes/nihilo/nihilo.css";
        @import "/stylesheets/global.css";
    </style>

    <% if RAILS_ENV == "production" %>
        <script type="text/javascript" src="/javascripts/release/dojo/dojo/dojo.js" djConfig="parseOnLoad: true"></script>
        <script type="text/javascript" src="/javascripts/release/dojo/dojo/ideapad.js"></script>
        <script type="text/javascript">
            dojo.require("drails.common");
        </script>
    <% else %>
        <script type="text/javascript" src="/javascripts/dojo/dojo/dojo.js" djConfig="parseOnLoad: true, isDebug: true"></script>
        <script type="text/javascript">
            dojo.registerModulePath("drails", "../drails");
            dojo.registerModulePath("ideapad", "../../ideapad");
            dojo.require("drails.common");
        </script>
<% end %>
</head>
<body class="nihilo">

<div id="content">
<%= yield %>
</div>

</body>
</html>